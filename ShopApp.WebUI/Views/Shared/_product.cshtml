@model Product

<div class="col-md-4">
    <div class="card mb-3">
        <img src="~/img/@Model.ImageURL" alt="@Model.Name"
             class="card-img-top p-3" />

        <div class="card-body">
            <h4 class="card-title">
                <a asp-controller="shop" asp-action="details" asp-route-id="@Model.Id">@Model.Name</a>
            </h4>
            <h5>
                @Model.Price <i class="fas fa-lira-sign"></i>
            </h5>
        </div>

        <div class="card-footer text-center">
            <a asp-controller="shop" asp-action="details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm ml-3">Details</a>
            <a href="#" class="btn btn-primary btn-sm ml-3">Add to Cart</a>
        </div>
    </div>
</div>