@model CategoryListViewModel

<div class="list-group">
    @foreach (var category in Model.Categories)
    {
        <a class="list-group-item list-group-item-action @(Model.SelectedCategory == category.Name.ToLower()?"active":"")"
           asp-controller="shop"
           asp-action="list"
           asp-route-category="@category.Name.ToLower()">
            @category.Name
        </a>
    }
</div>